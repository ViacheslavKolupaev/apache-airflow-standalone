##########################################################################################
# `EditorConfig` configuration file.
#
# Docs: https://editorconfig.org/
##########################################################################################

root = True

[*]
charset = utf-8
max_line_length = 120
ij_visual_guides = 90,120
ij_wrap_on_typing = True
end_of_line = lf
insert_final_newline = True
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = True

[*.{bash,sh}]
indent_size = 2
tab_width = 2

[*.{js,json,groovy}]
indent_size = 2
tab_width = 2

[*.{yaml,yml}]
indent_size = 2
tab_width = 2
